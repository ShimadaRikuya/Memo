<div class="carddetailPage">
  <div class="container">
    <div class="cardContents">
      <div class="cardContents_title">
        <div>タイトル</div>
        <h2><%= @card.title %></h2>
      </div>
      <div class="cardContents_memo">
        <div>詳細</div>
        <h2><%= @card.memo %></h2>
      </div>
      <div class="cardContents_listStatus">
        <div>リスト名</div>
        <div><%= @card.list.title %></div>
      </div>
      <div class="cardContents_btnArea">
        <%= link_to '編集する' ,edit_list_card_path, class: "edit_btn" %>
        <%= link_to '削除する', list_card_path, class: "text-danger delete_btn",method: :delete, data: {confirm: "このカードを削除してもよろしいですか？"} %>
      </div>
    </div>
  </div>
</div>